          <h4>Location</h4>
          <h4><%=booking.toilet.location%></h4>
          <p><%= link_to "Edit booking", edit_booking_path(booking), class: "btn small-btn-show btn-test btn-book-reservation"  %></p>
          <p><%= link_to "Cancel booking", booking_path(booking), method: :delete, class: "btn small-btn-delete btn-test btn-cancel-reservation", data: {confirm: "Cancel booking ?"} %></p>
        </div>
        <% if booking.toilet.photo.attached? %>
          <%= image_tag(booking.user.photo, class: "card-trip-user-seb avatar-bordered") %>
        <% else%>
          <%= image_tag("https://res.cloudinary.com/dlyi5kech/image/upload/v1653654146/Image_d_iOS_oqqiak.jpg", class: "card-trip-user-seb avatar-bordered") %>
        <% end %>
      </div>
