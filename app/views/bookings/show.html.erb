<div class="container_show">
  <br>
  <% booking = Booking.find(params[:id]) %>
  <% if (((booking.start_date - Time.now)/60).to_i).positive? %>
    <h1>Envoy your pee in <%= ((booking.start_date - Time.now)/60).to_i %> min ðŸ˜Ž</h1>
    <div class="card-trip-seb">
        <% if booking.toilet.photo.attached? %>
          <%= image_tag(booking.toilet.photo) %>
        <% else%>
          <%= image_tag(image_path("https://res.cloudinary.com/dlyi5kech/image/upload/v1653648388/development/WC_jo2l1c.jpg")) %>
