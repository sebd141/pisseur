<div class="log">
<h1>Edit your toilet</h1>
<%= simple_form_for([@user, @toilet]) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :location %>
  <%= f.input :price %>
  <%= f.input :category, collection: ['urinal', 'washing toilet', 'Turkish toilet', 'dry toilet', 'chemical toilet'], prompt: "- What type of toilet?" %>
  <%= f.input :photo, as: :file %>

  <%= f.input :gender, collection: ['male', 'female', 'non-binary'], prompt: "- Select gender preferance(s)"  %>
  <div class="form-actions btn btn-ghost">
          <%= f.button :submit, "Update your toilet" %>
  </div>
<% end %>
</div>
