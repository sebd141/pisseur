<%# CARD TRIP %>
<div class="container_show">
  <div class="card-trip">
      <% if @toilet.photo.attached? %>
        <%= image_tag(@toilet.photo) %>
      <% else%>
        <%= image_tag(image_path("https://res.cloudinary.com/dlyi5kech/image/upload/v1653648388/development/WC_jo2l1c.jpg")) %>
      <% end %>
    <div class="card-trip-infos">
      <div>
        <h2><%=@toilet.name%></h2>
        <p><%=@toilet.description%></p>
        <p><%=@toilet.location%></p>
        <br>
        <p>Average rating for this toilet: <strong><%= @toilet.reviews.average(:rating).to_f %></strong></p>
        <p>
      </div>
      <h2 class="card-trip-pricing">â‚¬<%=@toilet.price%></h2>
      <% if @toilet.photo.attached? %>
        <%= image_tag(@toilet.user.photo, class: "card-trip-user avatar-bordered") %>
      <% else%>
        <%= image_tag("https://res.cloudinary.com/dlyi5kech/image/upload/v1653654146/Image_d_iOS_oqqiak.jpg", class: "card-trip-user avatar-bordered") %>
      <% end %>
      <div class="btn-test">
        <%= link_to "Book a toilet", new_toilet_booking_path(@toilet), class: "form-actions btn btn-edit" %>
        <%= link_to "Edit toilet", edit_toilet_path(@toilet), class: "form-actions btn btn-edit" %>
        <%= link_to "Delete toilet", toilet_path(@toilet), method: :delete, class: "form-actions btn btn-delete", data: {confirm: "Delete this toilet ?" } %>
      </div>
    </div>
  </div>
</div>
